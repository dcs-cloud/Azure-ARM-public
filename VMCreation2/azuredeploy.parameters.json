{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        
        "ResourceGroupName_of_VNET": {
            "defaultValue": "itelli-SHAREDHUB-prod-ASE-01-rg",
            "type": "string",
            "metadata": {
                "description": "Name of the ResourceGroup with the VNET"
            }
        },
        "Region_Code": {
            "defaultValue": "JPE",
            "type": "String"
        },
        "Service_ShortName": {
            "defaultValue": "HANA",
            "type": "String"
        },
        "Number_Of_VM": {
            "type": "int",
             "metadata": {
            "description": "Enter the number of VM to be created"}
        },
        "VMstart": {
            "type": "int",
             "metadata": {
            "description": "Enter the starting sequence number of VM to be created"}
        },
        "VMPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password must be between 12 and 72 characters and have 3 of the following: 1 lower case, 1 upper case, 1 number and 1 special character"}
        },
        "VMSize":{
            "type": "string",
                "metadata": {
                    "description": "VM T-Shirt Szie"
                },
                "defaultValue": "Standard_D2s_v3",
                "allowedValues": [
                    "Standard_D2s_v3",
                    "Standard_D2_v3",
                    "Standard_B1ms"]
        },
        "VMOSType":{
            "type": "string",
                "metadata": {
                    "description": "VM OS Type"
                },
                "defaultValue": "Windows",
                "allowedValues": [
                    "Windows",
                    "Linux"
                ]
        },
         "sku":{
            "type": "string",
                "metadata": {
                    "description": "VM OS Type and Version"
                },
                "defaultValue": "2012-R2-Datacenter",
                "allowedValues": [
                    "2012-R2-Datacenter",
                    "2016-Datacenter",
                    "11-sp4",
                    "12-sp4"
                ]
        },
        "VirtualNetworkName": {
            "defaultValue": "itelli-ASE-Management-10.164.32.0_21-vnet",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "Management-10.164.33.0_24-subnet",
            "type": "string"
        },
        "networkSecurityGroups_01_name": {
            "defaultValue": "Management-nsg",
            "type": "string",
            "allowedValues": [
                "DMZ-nsg",
                "Management-nsg",
                "Appserver-nsg",
                "Database-nsg",
                "Backup-nsg",
                "DMZ-DR-nsg",
                "Management-DR-nsg",
                "Appserver-DR-nsg",
                "Database-DR-nsg",
                "Backup-DR-nsg"
            ]
        }
  
    }
