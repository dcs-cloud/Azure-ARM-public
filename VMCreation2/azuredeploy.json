{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        
        "ResourceGroupName_of_VNET": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Name of the ResourceGroup with the VNET"
            }
        },
        "Region_Code": {
            "defaultValue": "",
            "type": "String"
        },
        "Service_ShortName": {
            "defaultValue": "",
            "type": "String"
        },
        "Number_Of_VM": {
            "type": "int",
             "metadata": {
            "description": "Enter the number of VM to be created"}
        },
        "VMstart": {
            "type": "int",
             "metadata": {
            "description": "Enter the starting sequence number of VM to be created"}
        },
        "VMAdminID": {
            "type": "string",
            "metadata": {
                "description": "Enter the Admin ID"}
        },
        "VMPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password must be between 12 and 72 characters and have 3 of the following: 1 lower case, 1 upper case, 1 number and 1 special character"}
        },
        "VMSize":{
            "type": "string",
                "metadata": {
                    "description": "VM T-Shirt Szie"
                },
                "defaultValue": "Standard_D2s_v3",
                "allowedValues": [
                    "Standard_D2s_v3",
                    "Standard_D2_v3",
                    "Standard_B1ms"]
        },
        "VMOSType":{
            "type": "string",
                "metadata": {
                    "description": "VM OS Type"
                },
                "defaultValue": "Windows",
                "allowedValues": [
                    "Windows",
                    "Linux"
                ]
        },
        "ImageSubscriptionID":{
            "type": "string",
                "metadata": {
                    "description": "Enter the subscription ID where your golden image is located"
                },
                "defaultValue": ""
        },
        "ImageDefination":{
            "type": "string",
                "metadata": {
                    "description": "Enter the Image Defination to be used"
                },
                "defaultValue": "Win2012R2ImageDefinition",
                "allowedValues": [
                    "Win2012R2ImageDefinition",
                    "myWin2016R2ImageDefinition",
                    "SLES12SP4ImageDefinition"
                ]
        },
        "ImageVersion":{
            "type": "string",
                "metadata": {
                    "description": "Enter the image ID to be used"
                },
                "defaultValue": ""
        },
        "VirtualNetworkName": {
            "defaultValue": "",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "",
            "type": "string"
        }    },
    "variables": {
        "vnetId": "[concat(variables('subID'),'/resourceGroups/',parameters('ResourceGroupName_of_VNET'),'/providers/Microsoft.Network/virtualNetworks/',parameters('VirtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "subID": "[subscription().id]",
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "condition": "[equals(parameters('VMOSType'), 'Windows')]",
            "comments": "Create VirtualMachines",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'w0', copyIndex(parameters('VMstart')))]",
            "apiVersion": "2018-06-01",
            "location": "[variables('location')]",
            "tags": {
                "Environment": "dev",
                "Release": "[parameters('ImageVersion')]",
                "Alias": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'w0', copyIndex(parameters('VMstart')))]",
                "CreatedBy": ""
            },
            "scale": null,
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "diskSizeGB": 128
                    },
                "imageReference": {
                    "id": "[concat('/subscriptions/',parameters('ImageSubscriptionID'),'/resourceGroups/BryanGalleryRG/providers/Microsoft.Compute/galleries/goldengallery/images/',parameters('ImageDefination'),'/versions/',parameters('ImageVersion'))]"
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'w0', copyIndex(parameters('VMstart')))]",
                    "adminUsername": "[parameters('VMAdminID')]",
                    "adminPassword": "[parameters('VMPassword')]"    
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'w0',copyIndex(parameters('VMstart')),'-nic'))]"
                        }
                    ]
                }
            },
            "copy": {
                "name": "loop_vm_creation",
                "count": "[parameters('Number_Of_VM')]"

            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'w0',copyIndex(parameters('VMstart')),'-nic'))]"
            ]
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Linux')]",
            "comments": "Create VirtualMachines",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'l0', copyIndex(parameters('VMstart')))]",
            "apiVersion": "2018-06-01",
            "location": "[variables('location')]",
            "tags": {
                "Environment": "dev",
                "Release": "[parameters('ImageVersion')]",
                "Alias": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'l0', copyIndex(parameters('VMstart')))]",
                "CreatedBy": ""
            },
            "scale": null,
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "diskSizeGB": 64
                    },
                "imageReference": {
                    "id": "[concat('/subscriptions/',parameters('ImageSubscriptionID'),'/resourceGroups/BryanGalleryRG/providers/Microsoft.Compute/galleries/goldengallery/images/',parameters('ImageDefination'),'/versions/',parameters('ImageVersion'))]"
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'l0', copyIndex(parameters('VMstart')))]",
                    "adminUsername": "[parameters('VMAdminID')]",
                    "adminPassword": "[parameters('VMPassword')]"    
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'l0',copyIndex(parameters('VMstart')),'-nic'))]"
                        }
                    ]
                }
            },
            "copy": {
                "name": "loop_vm_creation",
                "count": "[parameters('Number_Of_VM')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'l0',copyIndex(parameters('VMstart')),'-nic'))]"
            ]
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Windows')]",
            "comments": " ",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'w0',copyIndex(parameters('VMstart')),'-nic')]",
            "apiVersion": "2018-08-01",
            "location": "[variables('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],

                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            },
            "copy": {
                "name" : "loop_nic_creation",
                "count": "[parameters('Number_Of_VM')]"
            }
            
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Linux')]",
            "comments": " ",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'l0',copyIndex(parameters('VMstart')),'-nic')]",
            "apiVersion": "2018-08-01",
            "location": "[variables('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],

                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            },
            "copy": {
                "name" : "loop_nic_creation",
                "count": "[parameters('Number_Of_VM')]"
            }
            
        }
        
    ]
}
