{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        
        "ResourceGroupName_of_VNET": {
   
            "type": "string",
            "metadata": {
                "description": "Name of the ResourceGroup with the VNET"
            }
        },
        "Region_Code": {
            "defaultValue": "",
            "type": "String"
        },
        "Service_ShortName": {
            "defaultValue": "",
            "type": "String"
        },
        "Number_Of_VM": {
            "type": "int",
             "metadata": {
            "description": "Enter the number of VM to be created"}
        },
        "VMstart": {
            "type": "int",
             "metadata": {
            "description": "Enter the starting sequence number of VM to be created"}
        },
        "VMPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password must be between 12 and 72 characters and have 3 of the following: 1 lower case, 1 upper case, 1 number and 1 special character"}
        },
        "VMSize":{
            "type": "string",
                "metadata": {
                    "description": "VM T-Shirt Szie"
                },
                "defaultValue": "Standard_D2s_v3",
                "allowedValues": [
                    "Standard_D2s_v3",
                    "Standard_D2_v3",
                    "Standard_B1ms"]
        },
        "VMOSType":{
            "type": "string",
                "metadata": {
                    "description": "VM OS Type"
                },
                "defaultValue": "Windows",
                "allowedValues": [
                    "Windows",
                    "Linux"
                ]
        },
         "sku":{
            "type": "string",
                "metadata": {
                    "description": "VM OS Type and Version"
                },
                "defaultValue": "2012-R2-Datacenter",
                "allowedValues": [
                    "2012-R2-Datacenter",
                    "2016-Datacenter",
                    "11-sp4",
                    "12-sp4"
                ]
        },
        "VirtualNetworkName": {
            "defaultValue": "",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "",
            "type": "string"
        },
        "networkSecurityGroups_01_name": {
            "defaultValue": "Management-nsg",
            "type": "string",
            "allowedValues": [
                "DMZ-nsg",
                "Management-nsg",
                "Jumphost-nsg",
                "Appserver-nsg",
                "Database-nsg",
                "Backup-nsg",
                "DMZ-DR-nsg",
                "Management-DR-nsg",
                "Appserver-DR-nsg",
                "Database-DR-nsg",
                "Backup-DR-nsg"
            ]
        }
  
    },
    "variables": {

        "vnetId": "[concat(variables('subID'),'/resourceGroups/',parameters('ResourceGroupName_of_VNET'),'/providers/Microsoft.Network/virtualNetworks/',parameters('VirtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "subID": "[subscription().id]",
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "condition": "[equals(parameters('VMOSType'), 'Windows')]",
            "comments": "Create VirtualMachines",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0', copyIndex(parameters('VMstart')))]",
            "apiVersion": "2018-06-01",
            "location": "[variables('location')]",
            "tags": {
                "Environment": "dev",
                "CreatedBy": "bryan.foo@itelligence.com.my"
            },
            "scale": null,
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "[parameters('sku')]",
                        "version": "latest"
                    },
                    "osDisk": {
                                         
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "diskSizeGB": 128
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0', copyIndex(parameters('VMstart')))]",
                    "adminUsername": "itadmin",
                    "adminPassword": "[parameters('VMPassword')]"    
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0',copyIndex(parameters('VMstart')),'-nic'))]"
                        }
                    ]
                }
            },
            "copy": {
                "name": "loop_vm_creation",
                "count": "[parameters('Number_Of_VM')]"

            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0',copyIndex(parameters('VMstart')),'-nic'))]"
            ]
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Linux')]",
            "comments": "Create VirtualMachines",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0', copyIndex(parameters('VMstart')))]",
            "apiVersion": "2018-06-01",
            "location": "[variables('location')]",
            "tags": {
                "Environment": "dev",
                "CreatedBy": "bryan.foo@itelligence.com.my"
            },
            "scale": null,
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "suse",
                        "offer": "sles",
                        "sku": "[parameters('sku')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "diskSizeGB": 64
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0', copyIndex(parameters('VMstart')))]",
                    "adminUsername": "itadmin",
                    "adminPassword": "[parameters('VMPassword')]"    
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0',copyIndex(parameters('VMstart')),'-nic'))]"
                        }
                    ]
                }
            },
            "copy": {
                "name": "loop_vm_creation",
                "count": "[parameters('Number_Of_VM')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0',copyIndex(parameters('VMstart')),'-nic'))]"
            ]
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Windows')]",
            "comments": " ",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0',copyIndex(parameters('VMstart')),'-nic')]",
            "apiVersion": "2018-08-01",
            "location": "[variables('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0',copyIndex(parameters('VMstart')),'-pip'))]"
                            },
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],

                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_01_name'))]"
                },
                "primary": true,
                "tapConfigurations": []
            },
            "copy": {
                "name" : "loop_nic_creation",
                "count": "[parameters('Number_Of_VM')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0',copyIndex(parameters('VMstart')),'-pip'))]"
            ]
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Linux')]",
            "comments": " ",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0',copyIndex(parameters('VMstart')),'-nic')]",
            "apiVersion": "2018-08-01",
            "location": "[variables('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0',copyIndex(parameters('VMstart')),'-pip'))]"
                            },
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],

                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroups_01_name'))]"
                },
                "primary": true,
                "tapConfigurations": []
            },
            "copy": {
                "name" : "loop_nic_creation",
                "count": "[parameters('Number_Of_VM')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0',copyIndex(parameters('VMstart')),'-pip'))]"
            ]
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Windows')]",
            "comments": " ",
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'vm0',copyIndex(parameters('VMstart')),'-pip')]",
            "apiVersion": "2018-08-01",
            "location": "[variables('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "ipTags": []
            },
            "copy": {
                "name": "loop_pip_creation",
                "count": "[parameters('Number_Of_VM')]"
            },
            "dependsOn": []
        },
        {
            "condition": "[equals(parameters('VMOSType'), 'Linux')]",
            "comments": " ",
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "name": "[concat(parameters('Region_Code'),parameters('Service_ShortName'),'lvm0',copyIndex(parameters('VMstart')),'-pip')]",
            "apiVersion": "2018-08-01",
            "location": "[variables('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "ipTags": []
            },
            "copy": {
                "name": "loop_pip_creation",
                "count": "[parameters('Number_Of_VM')]"
            },
            "dependsOn": []
        }

    ]
}
