{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "images_Name": {
            "defaultValue": "SLES12SP4-image-Jan2019",
            "type": "string"
        },
        "OSDisk_Name": {
            "defaultValue": "SLES12SP4-image-Jan2019_OsDisk",
            "type": "string"
        },
        "Disk_size": {
            "defaultValue": "64",
            "type": "int"
        },
        "Exist": {
            "defaultValue": "no",
            "allowedValues": [
                "yes",
                "no"
            ],
            "type": "string"
        },
        "Blob_Name" : {
            "defaultValue" : "nedspicehubstorage1",
            "type": "string"
        },
        "VHD_folder" : {
            "defaultValue": "goldenimage",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/images",
            "name": "[parameters('images_Name')]",
            "apiVersion": "2018-06-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "storageProfile": {
                    "osDisk": {
                        "osType": "Linux",
                        "osState": "Generalized",
                        "diskSizeGB": "[parameters('Disk_size')]",
                        "managedDisk": {
                            "id": "[resourceId('Microsoft.Compute/disks', parameters('OSDisk_Name'))]"
                        },
                        "caching": "ReadWrite",
                        "storageAccountType": "Standard_LRS"
                    },
                    "zoneResilient": false
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Compute/disks', parameters('OSDisk_Name'))]"            ]
        },
        {
            "condition": "[equals(parameters('Exist'), 'no')]",
            "type": "Microsoft.Compute/disks",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "name": "[parameters('OSDisk_Name')]",
            "apiVersion": "2018-06-01",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "creationData": {
                    "createOption": "Import",
                    "vhdUri": "[concat('https://', parameters('Blob_Name'),'.blob.core.windows.net/', parameters('VHD_folder'),'/', parameters('OSDisk_Name'),'.vhd')]" 
                },
                "diskSizeGB": "[parameters('Disk_size')]"
            },
            "dependsOn": []
        }
    ]
}
