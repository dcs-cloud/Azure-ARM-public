{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ResourceGroupName_of_VNET": {
            "defaultValue": "Nedspice-S4H-dev-EUN-01-rg",
            "type": "string",
            "metadata": {
                "description": "Name of the ResourceGroup containing the VNET"
            }
        },    
        "Customer_Code": {
            "defaultValue": "nh",
            "type": "String",
            "maxLength": "5"
        },
        "Service_ShortName": {
            "defaultValue": "bvn4",
            "type": "String",
            "maxLength": "5"
        },
        "Environment": {
            "defaultValue": "j",
            "type": "String",
            "metadata": {
            "description": "Example: p- Production, s- Sandbox, d- Development, q- Quality, r- Pre-Prod"},
            "allowedValues": [
                "p",
                "d",
                "s",
                "q",
                "j",
                "r"]
        },
        "Number_Of_VM": {
            "type": "int",
             "metadata": {
            "description": "Enter the number of VM to be created"}
        },
        "VM_Numbering": {
            "type": "int",
             "metadata": {
            "description": "Last digit number 1, 2... Example: nhbvn4d1 or nhbvn4d2 "}
        },
        "VMAdminID": {
			"defaultValue": "itadmin",
            "type": "string",
            "metadata": {
                "description": "Enter the Admin ID"}
        },
        "VMPassword": {
            "type": "securestring",
            "minLength": "14",
            "metadata": {
                "description": "Password must be between 14 and 72 characters and have 3 of the following: 1 lower case, 1 upper case, 1 number and 1 special character"}
        },
        "VMSize":{
            "type": "string",
                "metadata": {
                    "description": "VM T-Shirt Szie"
                },
                "defaultValue": "Standard_D2s_v3",
                "allowedValues": [
                        "Standard_D1_v2",
                        "Standard_D2_v2",
                        "Standard_D3_v2",
                        "Standard_D4_v2",
                        "Standard_D5_v2",
                        "Standard_D11_v2",
                        "Standard_D12_v2",
                        "Standard_D13_v2",
                        "Standard_D14_v2",
                        "Standard_D15_v2",
                        "Standard_D2s_v3",
                        "Standard_D4_v3",
                        "Standard_D8_v3",
                        "Standard_D16_v3",
                        "Standard_D32_v3",
                        "Standard_D64_v3",
                        "Standard_E2_v3",
                        "Standard_E4_v3",
                        "Standard_E8_v3",
                        "Standard_E16_v3",
                        "Standard_E32_v3",
                        "Standard_E64_v3"
                ]
        },
        "Blob_Name" : {
            "defaultValue" : "nedspicehubdeveun1",
            "metadata": {
            "description": "Blob for bootDiagnostics"
            },
            "type": "string"
        },
        "GoldenImage_RG" : {
            "defaultValue" : "Nedspice-GOLDENIMAGE-prod-EUN-01-rg",
            "metadata": {
            "description": "Resource Group of the GoldenImage gallery"
            },
            "type": "string"
        },
        "DiskType":{
            "type": "string",
                "metadata": {
                    "description": "Select the disk type, e.g : Premium_LRS, StandardSSD_LRS, Standard_LRS"
                },
                "defaultValue": "Premium_LRS"
            },
        "VMOSType":{
            "type": "string",
                "metadata": {
                    "description": "VM OS Type"
                },
                "defaultValue": "Linux",
                "allowedValues": [
                    "Linux",
                    "Windows"
                ]
        },
        "ImageDefination":{
            "type": "string",
                "metadata": {
                    "description": "Enter the Image Defination to be used"
                },
                "defaultValue": "SLES12SP4ImageDefinition",
                "allowedValues": [
                    "Win2012R2ImageDefinition",
                    "Win2016ImageDefinition",
                    "SLES12SP4ImageDefinition"
                ]
        },
        "ImageVersion":{
            "type": "string",
                "metadata": {
                    "description": "Enter the image ID to be used, example 1.0.0, 1.0.2 or 2.0.0"
                },
                "defaultValue": "1.0.0"
        },
        "VirtualNetworkName": {
            "defaultValue": "Nedspice-EUN-AppHosting-10.164.56.0_25-vnet",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "Appserver-10.164.56.64_26-subnet",
            "type": "string"
        }    
    },
    "variables": {
        "vnetId": "[concat(variables('subID'),'/resourceGroups/',parameters('ResourceGroupName_of_VNET'),'/providers/Microsoft.Network/virtualNetworks/',parameters('VirtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "subID": "[subscription().id]",
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "comments": "Create VirtualMachines",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('Customer_Code'),parameters('Service_ShortName'),parameters('Environment'),  parameters('VM_Numbering'))]",
            "apiVersion": "2018-06-01",
            "location": "[variables('location')]",
            "tags": {
                "Environment": "[parameters('Environment')]",
                "Release": "[parameters('ImageVersion')]",
                "Alias": "[concat(parameters('Customer_Code'),parameters('Service_ShortName'),parameters('Environment'), parameters('VM_Numbering'))]",
                "CreatedBy": "os-my-gms-dcs-cloud@itelligence.com.my"
            },
            "scale": null,
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "managedDisk": {
                            "storageAccountType": "[parameters('DiskType')]"
                        },
                        "createOption": "FromImage"
                    },
                "imageReference": {
                    "id": "[concat(variables('subID'),'/resourceGroups/',parameters('GoldenImage_RG'),'/providers/Microsoft.Compute/galleries/goldengallery/images/',parameters('ImageDefination'),'/versions/',parameters('ImageVersion'))]"
                    }
                },
                "osProfile": {
                    "computerName": "[concat(parameters('Customer_Code'),parameters('Service_ShortName'),parameters('Environment'),  parameters('VM_Numbering'))]",
                    "adminUsername": "[parameters('VMAdminID')]",
                    "adminPassword": "[parameters('VMPassword')]"    
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://',parameters('Blob_Name'),'.blob.core.windows.net/')]"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Customer_Code'),parameters('Service_ShortName'),parameters('Environment'), parameters('VM_Numbering'),'-nic'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Customer_Code'),parameters('Service_ShortName'),parameters('Environment'), parameters('VM_Numbering'),'-nic'))]"
            ]
        },
        {
            "comments": " ",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('Customer_Code'),parameters('Service_ShortName'),parameters('Environment'), parameters('VM_Numbering'),'-nic')]",
            "apiVersion": "2018-08-01",
            "location": "[variables('location')]",
            "tags": {},
            "scale": null,
            "properties": {
                
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],

                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
            
        }
    ]
}
